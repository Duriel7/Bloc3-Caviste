<Window x:Class="Bloc3_Caviste.Views.FournisseurCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Bloc3_Caviste.Views"
        mc:Ignorable="d"
        Title="Nouveau Fournisseur" 
        Height="550" 
        Width="720"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource FondPrincipal}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Style moderne pour les TextBox avec apparence native -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontFamily" Value="{DynamicResource Inter}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Focusable="false"
                                         HorizontalScrollBarVisibility="Hidden"
                                         VerticalScrollBarVisibility="Hidden"
                                         Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#6366F1" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les labels -->
        <Style x:Key="ModernLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource Inter}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Style pour le texte d'aide -->
        <Style x:Key="HelperTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource Inter}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="{DynamicResource FondPrincipal}">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="24" Direction="315" ShadowDepth="8" Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- En-tête avec fermeture -->
            <Grid Grid.Row="0" Height="50" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Nouveau Fournisseur" 
                           Style="{DynamicResource TitreRougePassion}" 
                           FontSize="32" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                
                <Button Content="✕" 
                        Width="32" Height="32"
                        Background="Transparent" 
                        BorderThickness="0"
                        FontSize="18" 
                        Foreground="{DynamicResource Primaire}"
                        Click="CloseButton_Click"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEF2F2"/>
                                    <Setter Property="Foreground" Value="#DC2626"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Conteneur principal style première image -->
            <Border Grid.Row="1" 
                    CornerRadius="16" 
                    Padding="32" 
                    Background="{DynamicResource FondAlternatif}" 
                    BorderBrush="{DynamicResource Primaire}" 
                    BorderThickness="1"
                    Margin="0,20,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="16" Direction="315" ShadowDepth="4" Opacity="0.08"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ligne 1: Nom de l'entreprise / Contact principal (disposition horizontale) -->
                    <Grid Grid.Row="0" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBox x:Name="EntrepriseTextBox"
                                     FontFamily="{DynamicResource Limelight}"
                                     Style="{DynamicResource TextBoxRouge}"
                                     Text="Vigne de Robert"
                                     Tag="Nom de l'entreprise"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBox x:Name="ContactTextBox" 
                                     FontFamily="{DynamicResource Limelight}"
                                     Style="{DynamicResource TextBoxRouge}"
                                     Text="Martin Robert"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"
                                     Tag="Contact principal"/>
                            <TextBlock Text="This is an input helper text." Style="{StaticResource HelperTextStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Ligne 2: Email / Téléphone (disposition horizontale) -->
                    <Grid Grid.Row="1" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBox x:Name="EmailTextBox" 
                                     Style="{DynamicResource TextBoxRouge}"
                                     Text="mail@gmail.com"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"
                                     Tag="email@exemple.com"/>
                            <TextBlock Text="This is an input helper text." Style="{StaticResource HelperTextStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBox x:Name="TelephoneTextBox" 
                                     Style="{DynamicResource TextBoxRouge}"
                                     Text="Téléphone"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"
                                     Tag="06 12 34 56 78"/>
                            <TextBlock Text="This is an input helper text." Style="{StaticResource HelperTextStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Ligne 3: Adresse / Ville (disposition horizontale) -->
                    <Grid Grid.Row="2" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBox x:Name="AdresseTextBox" 
                                     Style="{DynamicResource TextBoxRouge}"
                                     Text="adresse"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"
                                     Tag="123 Rue de la Vigne"/>
                            <TextBlock Text="This is an input helper text." Style="{StaticResource HelperTextStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBox x:Name="VilleTextBox" 
                                     Style="{DynamicResource TextBoxRouge}"
                                     Text="Ville"
                                     GotFocus="TextBox_GotFocus"
                                     LostFocus="TextBox_LostFocus"
                                     Tag="Ville"/>
                            <TextBlock Text="This is an input helper text." Style="{StaticResource HelperTextStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Espace flexible -->
                    <Grid Grid.Row="3"/>

                    <!-- Bouton Enregistrer (position exacte comme première image) -->
                    <StackPanel Grid.Row="4" HorizontalAlignment="Right">
                        <Button Content="Enregistrer"
                                Style="{DynamicResource BoutonRougePassion}"
                                Height="48"
                                Width="140"
                                FontFamily="{DynamicResource Inter}"
                                FontSize="16"
                                FontWeight="Black"
                                Click="SaveButton_Click"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{DynamicResource Accent}" 
                                            CornerRadius="24" 
                                            Padding="24,12">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="8" Direction="315" ShadowDepth="3" Opacity="0.15"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"
                                                         TextBlock.Foreground="{DynamicResource BoutonHover}"
                                                         TextBlock.FontWeight="Medium"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource AccentClair}"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="Black" BlurRadius="12" Direction="315" ShadowDepth="4" Opacity="0.25"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
