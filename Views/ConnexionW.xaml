<Window x:Class="Bloc3_Caviste.Views.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Connexion"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent">

    <Grid>
        <Border CornerRadius="16"
                Background="{DynamicResource FondPrincipal}">
            <Border CornerRadius="16"
                    Padding="40"
                    Margin="120"
                    Background="{DynamicResource Accent}"
                    Effect="{DynamicResource MaterialDesignElevation3}">
                <StackPanel Margin="4,-27,3,-27">
                    <TextBlock Text="Bienvenue"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Primaire}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Choisissez votre espace"
                               FontSize="16"
                               Foreground="{DynamicResource Primaire}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,32"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Content="Dashboard"
                                Width="150"
                                Height="44"
                                HorizontalAlignment="Center"
                                Style="{DynamicResource BoutonRougePassion}"
                                Click="DashboardButton_Click"/>
                        <Button Grid.Column="1"
                                Content="Caisse"
                                Width="150"
                                Height="44"
                                Style="{DynamicResource BoutonRougePassion}"
                                Click="CaisseButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
