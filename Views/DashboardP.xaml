<Page x:Class="Bloc3_Caviste.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Bloc3_Caviste.Views"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard"
      Background="{DynamicResource FondPrincipal}">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="82"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Header-->
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,5">
                <TextBlock Text="Dashboard" VerticalAlignment="Center" FontFamily="{DynamicResource Limelight}" FontWeight="SemiBold" FontSize="30" Foreground="{DynamicResource Primaire}"/>
            </StackPanel>
        </Grid>

        <!--KPI-->
        <Grid Margin="0,0,0,16" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <materialDesign:Card Grid.Column="0" Style="{DynamicResource CardDashboard}" Background="Transparent" Margin="0,0,8,0" Padding="6">
                <StackPanel>
                    <TextBlock Text="Ventes du jour" Style="{DynamicResource TitreRougePassion}" FontSize="14" Margin="0,0,0,8"/>
                    <TextBlock Text="1240 €" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Primaire}"/>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Grid.Column="1" Style="{DynamicResource CardDashboard}" Background="Transparent" Margin="0,0,8,0" Padding="6">
                <StackPanel>
                    <TextBlock Style="{DynamicResource TitreRougePassion}" FontSize="14" Margin="0,0,0,8" Text="Stock"/>
                    <TextBlock Text="1240 €" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Primaire}"/>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Grid.Column="2" Style="{DynamicResource CardDashboard}" Background="Transparent" Margin="0,0,8,0" Padding="6">
                <StackPanel>
                    <TextBlock Style="{DynamicResource TitreRougePassion}" FontSize="14" Margin="0,0,0,8" Text="Ventes du mois"/>
                    <TextBlock Text="1240 €" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Primaire}"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
        
        <!--Graphiques-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="570"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Graphique barres ventes par catégorie -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="12" materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid>                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Ventes par Catégorie" FontWeight="Bold" Foreground="{DynamicResource Primaire}" Margin="0,0,0,8"/>
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding Series}"/>
                </Grid>
            </materialDesign:Card>
            
            <!-- Graphique PieChart avec OutLabels -->
            <materialDesign:Card Grid.Column="1" Margin="0" Padding="12" materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Répartition des Vins" FontWeight="Bold" Foreground="{DynamicResource Primaire}" Margin="0,0,0,8"/>
                    <lvc:PieChart Grid.Row="1" 
                                  Series="{Binding PieSeries}"
                                  LegendPosition="Bottom"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Border Grid.Column="0" CornerRadius ="8" Padding="6" Background="{DynamicResource FondPrincipal}" BorderBrush="{DynamicResource Primaire}" BorderThickness="1">
                <DockPanel>
                     <DataGrid x:Name="ProductsDataGrid"
                                  ItemsSource="{Binding Products}"
                                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowHeight="32"
                                  SelectionMode="Single"
                                  Margin="0"
                                  Background="Transparent"
                                  Foreground="{DynamicResource Primaire}">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="80"/>
                            <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Prix" Binding="{Binding Price, StringFormat={}{0:C2}}" Width="90"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70"/>
                            <!-- Nouvelle colonne Actions (deux boutons fin de ligne) -->
                            <DataGridTemplateColumn Header="Actions" Width="160">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Modifier"
                                                        Style="{DynamicResource BoutonRougePassion}"
                                                        Padding="8,2"
                                                        MinWidth="60"
                                                        Tag="{Binding}"
                                                        Click="EditProductButton_Click"/>
                                            <Button Content="Suppr."
                                                        Style="{DynamicResource BoutonRougePassion}"
                                                        Background="{DynamicResource BoutonPress}"
                                                        Padding="8,2"
                                                        MinWidth="60"
                                                        Tag="{Binding}"
                                                        Click="DeleteProductButton_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>

    </Grid>
</Page>
