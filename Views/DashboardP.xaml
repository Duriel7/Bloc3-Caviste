<Page x:Class="Bloc3_Caviste.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Dashboard">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="{DynamicResource FondPrincipal}">
        <StackPanel Margin="16">
            <materialDesign:Card Style="{DynamicResource CardDashboard}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Dashboard" Style="{DynamicResource TitreRougePassion}" FontSize="28"/>
                        <TextBlock Text="Bienvenue dans votre espace de gestion" Style="{DynamicResource SousTitreRougePassion}" FontSize="16"/>
                    </StackPanel>
                    <Button Grid.Column="1" Style="{DynamicResource BoutonRougePassion}" Content="Nouvelle vente" VerticalAlignment="Center"/>
                </Grid>
            </materialDesign:Card>

            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Column="0" Style="{DynamicResource CardDashboard}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Ventes" Style="{DynamicResource SousTitreRougePassion}" FontSize="14" Margin="0,0,0,8"/>
                        <TextBlock Text="1240 €" FontFamily="{DynamicResource Inter}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource Primaire}"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="1" Style="{DynamicResource CardDashboard}" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="Clients" Style="{DynamicResource SousTitreRougePassion}" FontSize="14" Margin="0,0,0,8"/>
                        <TextBlock Text="156" FontFamily="{DynamicResource Inter}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource Primaire}"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Grid.Column="2" Style="{DynamicResource CardDashboard}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Stock" Style="{DynamicResource SousTitreRougePassion}" FontSize="14" Margin="0,0,0,8"/>
                        <TextBlock Text="2,847" FontFamily="{DynamicResource Inter}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource Primaire}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Row="0">
                    
                </materialDesign:Card>
                <materialDesign:Card Grid.Row="1">
                    
                </materialDesign:Card>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
