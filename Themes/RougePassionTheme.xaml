<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- PALETTE ROUGE PASSION -->

    <!-- PALETTE DE COULEURS ROUGE PASSION -->

    <!-- Couleurs principales -->
    <SolidColorBrush x:Key="Primaire" Color="#3D1D1C"/>
    <SolidColorBrush x:Key="PrimaireClair" Color="#5D3D3C"/>
    <SolidColorBrush x:Key="PrimaireFonce" Color="#1D0D0C"/>

    <!-- Couleurs d'accent -->
    <SolidColorBrush x:Key="Accent" Color="#EDD4A6"/>
    <SolidColorBrush x:Key="AccentClair" Color="#FFE4CEA7"/>
    <SolidColorBrush x:Key="AccentFonce" Color="#FFD8BF90"/>

    <!-- Couleurs secondaires -->
    <SolidColorBrush x:Key="Secondaire" Color="#594245"/>
    <SolidColorBrush x:Key="SecondaireClair" Color="#796265"/>
    <SolidColorBrush x:Key="SecondaireFonce" Color="#392225"/>

    <!-- Couleurs de fond -->
    <SolidColorBrush x:Key="FondPrincipal" Color="#FDF4E0"/>
    <SolidColorBrush x:Key="FondCarte" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="FondAlternatif" Color="#F9F1DC"/>

    <!-- États des boutons -->
    <SolidColorBrush x:Key="BoutonHover" Color="#712825"/>
    <SolidColorBrush x:Key="BoutonPress" Color="#331615"/>
    <SolidColorBrush x:Key="BoutonDisabled" Color="#CCCCCC"/>

    <!-- Couleurs de texte -->
    <SolidColorBrush x:Key="TextePrincipal" Color="#2D1D1C"/>
    <SolidColorBrush x:Key="TexteSecondaire" Color="#594245"/>
    <SolidColorBrush x:Key="TexteSurAccent" Color="#FFFFFF"/>

    <!-- POLICES PERSONNALISÉES -->
    <!-- Police de fallback au cas où Limelight ne se charge pas -->
    <FontFamily x:Key="Limelight">pack://application:,,,/Ressources/Font/Limelight.ttf#Limelight, Edwardian Script ITC, Times New Roman, Serif</FontFamily>
    <FontFamily x:Key="Inter">pack://application:,,,/Ressources/Font/Inter.ttf#Inter,, Segoe UI, Arial, Sans-Serif</FontFamily>

    <!-- STYLES MENU NAVIGATION LATÉRAL -->
    
    <!-- Container du menu -->
    <Style x:Key="MenuNavigationContainer" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{StaticResource FondCarte}"/>  
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
    </Style>

    <!-- Style du ListBox pour le menu principal -->
    <Style x:Key="MenuWine" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource Limelight}"/>
    </Style>

    <!-- Style pour les éléments du menu avec icônes -->
    <Style x:Key="MenuWineItem" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextePrincipal}"/>
        <Setter Property="FontFamily" Value="{StaticResource Limelight}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="Margin" Value="8,2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- État normal -->
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                        </Trigger>
                        <!-- État survol -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource Primaire}"/>
                        </Trigger>
                        <!-- État sélectionné -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource Primaire}"/>
                            <Setter Property="Foreground" Value="{StaticResource TexteSurAccent}"/>
                        </Trigger>
                        <!-- État sélectionné et survol -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaireClair}"/>
                            <Setter Property="Foreground" Value="{StaticResource TexteSurAccent}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style pour les icônes du menu -->
    <Style x:Key="MenuIcon" TargetType="materialDesign:PackIcon">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="0,0,2,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
    </Style>

    <!-- Style pour les titres du menu -->
    <Style x:Key="MenuTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Limelight}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextePrincipal}"/>
        <Setter Property="Margin" Value="16,8,0,8"/>
    </Style>

    <!-- Style spécifique SearchClient -->
    <Style x:Key="SearchClientStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="Padding" Value="8,0,8,0"/>
        <Setter Property="FontFamily" Value="{DynamicResource Inter}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="{StaticResource Accent}"/>
        <Setter Property="Foreground" Value="{StaticResource Primaire}"/>
        <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Collapsed"/>
        <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
        <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="8"/>
        <Setter Property="materialDesign:TextFieldAssist.HasLeadingIcon" Value="True"/>
        <Setter Property="materialDesign:TextFieldAssist.LeadingIcon" Value="Search"/>
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{StaticResource Primaire}"/>
    </Style>

    <!-- Style de bouton personnalisé -->
    <Style x:Key="BoutonRougePassion" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="{StaticResource Accent}"/>
        <Setter Property="Foreground" Value="{StaticResource Primaire}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="{StaticResource Inter}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentClair}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentFonce}"/>
            </Trigger>
        </Style.Triggers>
    </Style>    

    <!-- Style de carte personnalisé -->
    <Style x:Key="CardDashboard" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{StaticResource FondCarte}"/>
        <Setter Property="Margin" Value="16"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Primaire}"/>
    </Style>

    <!-- Style de TextBlock titre -->
    <Style x:Key="TitreRougePassion" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline4TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource Primaire}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontFamily" Value="{StaticResource Limelight}"/>
        <Setter Property="FontSize" Value="32"/>
    </Style>

    <!-- Style pour sous-titres -->
    <Style x:Key="SousTitreRougePassion" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignSubtitle1TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource TexteSecondaire}"/>
        <Setter Property="FontFamily" Value="{StaticResource Inter}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

</ResourceDictionary>
